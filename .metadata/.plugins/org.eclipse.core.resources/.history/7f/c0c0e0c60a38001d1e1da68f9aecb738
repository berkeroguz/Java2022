package miniProjeAsalSayi;

public class Main {

	public static void main(String[] args) {
		
		int number =3;
		boolean asalMi=false;
		
		for(int i=2;i<number;i++)
		{
			if(number==2)
			{
				asalMi=true;
				break;
			}
			else if (number%i==0)
			{
				asalMi=false;
				break;
			}
		}
		if(asalMi==true)
		{
			System.out.println("sayı asaildir.");
		}
		else
		{
			System.out.println("sayi asal degildir.");
		}
		
		
		
		
		
		
		
